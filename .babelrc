{
  "presets": [
    ["@babel/preset-env", {
      "modules": "commonjs",
      "loose": false
    }],
    ["@babel/preset-react"]
  ],
  "plugins":[
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-syntax-dynamic-import"],
    ["@babel/plugin-proposal-class-properties", { "loose" : true }],
    [
      "@babel/plugin-transform-runtime",
      {
        "absoluteRuntime": false,
        "corejs": false,
        "helpers": true,
        "regenerator": true,
        "useESModules": false
      }
    ]
  ]
}
