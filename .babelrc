{
  "presets": [
    ["@babel/preset-env", {
      "modules": "commonjs",
      "loose": false
    }],
    ["@babel/preset-react"],
    ["next/babel", {
      "preset-env": {
        "modules": "commonjs"
      },
      "transform-runtime": {
        "useESModules": false
      }
    }],
    "@zeit/next-typescript/babel"
  ],
  "plugins":[
    ["babel-plugin-styled-components"],
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose" : true }],
    [
      "@babel/plugin-transform-runtime",
      {
        "absoluteRuntime": false,
        "corejs": false,
        "helpers": true,
        "regenerator": true,
        "useESModules": false
      }
    ]
  ]
}
